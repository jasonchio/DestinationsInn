<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nearMe"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/near_me"
            android:scaleType="centerCrop"
            android:onClick="openMaps" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#664444"
            android:onClick="openWeb"
            android:padding="50dp"
            android:text="@string/reserve"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/arabian"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/arabian"
            android:scaleType="centerCrop"
            android:onClick="openArabianNights"
            android:contentDescription="@string/arabian" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/atlantis"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/atlantis"
            android:scaleType="centerCrop"
            android:onClick="openAtlantis"
            android:contentDescription="@string/atlantis"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/garden"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/garden"
            android:scaleType="centerCrop"
            android:onClick="openGarden"
            android:contentDescription="@string/garden"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/cave"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/cave"
            android:scaleType="centerCrop"
            android:onClick="openCave"
            android:contentDescription="@string/cave"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/egyptian"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/egyptian"
            android:scaleType="centerCrop"
            android:onClick="openEgyptian"
            android:contentDescription="@string/egyptian" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/enchanted"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/enchanted"
            android:scaleType="centerCrop"
            android:onClick="openEnchanted"
            android:contentDescription="@string/enchanted"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/jungle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/jungle"
            android:scaleType="centerCrop"
            android:onClick="openJungle"
            android:contentDescription="@string/jungle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/mayan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/mayan"
