            android:scaleType="centerCrop"
            android:onClick="openRJII"
            android:contentDescription="@string/rjii"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/seaCave"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/sea_cave"
            android:scaleType="centerCrop"
            android:onClick="openSeaCave"
            android:contentDescription="@string/sea_cave" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/tropical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/tropical"
            android:scaleType="centerCrop"
            android:onClick="openTropical"
            android:contentDescription="@string/tropical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#442222" />

        <ImageView
            android:id="@+id/wildWest"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/wild_west"
            android:scaleType="centerCrop"
            android:onClick="openWildWest"
            android:contentDescription="@string/wild_west"/>

</LinearLayout>
</ScrollView>