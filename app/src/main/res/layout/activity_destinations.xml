<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nearMe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#aa99dd"
            android:onClick="openMaps"
            android:text="@string/near"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title" />

        <ImageView
            android:id="@+id/alaska"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/alaska"
            android:scaleType="centerCrop"
            android:onClick="openAlaska"
            android:contentDescription="@string/alaska"/>

        <ImageView
            android:id="@+id/arabia"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/arabia"
            android:scaleType="centerCrop"
            android:onClick="openArabia"
            android:contentDescription="@string/arabia"/>


        <ImageView
            android:id="@+id/athens"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/athens"
            android:scaleType="centerCrop"
            android:onClick="openAthens"
            android:contentDescription="@string/athens"/>

        <ImageView
            android:id="@+id/congo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/congo"
            android:scaleType="centerCrop"
            android:onClick="openCongo"
            android:contentDescription="@string/congo"/>

        <ImageView
            android:id="@+id/egypt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/egypt"
            android:scaleType="centerCrop"
            android:onClick="openEgypt"
            android:contentDescription="@string/egypt"/>

        <ImageView
            android:id="@+id/england"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/england"
            android:scaleType="centerCrop"
            android:onClick="openEngland"
            android:contentDescription="@string/england"/>

        <ImageView
            android:id="@+id/hawaii"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/hawaii"
            android:scaleType="centerCrop"
            android:onClick="openHawaii"
            android:contentDescription="@string/hawaii" />

        <ImageView
            android:id="@+id/morocco"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/morocco"
            android:scaleType="centerCrop"
            android:onClick="openMorocco"
            android:contentDescription="@string/morocco"/>

        <ImageView
            android:id="@+id/newYork"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/new_york"
            android:scaleType="centerCrop"
            android:onClick="openNewYork"
            android:contentDescription="@string/new_york"/>

        <ImageView
            android:id="@+id/paris"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/paris"
            android:scaleType="centerCrop"
            android:onClick="openParis"
            android:contentDescription="@string/paris"/>

        <ImageView
            android:id="@+id/rio"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/rio"
            android:scaleType="centerCrop"
            android:onClick="openRio"
            android:contentDescription="@string/rio"/>

        <ImageView
            android:id="@+id/rome"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/rome"
            android:scaleType="centerCrop"
            android:onClick="openRome"
            android:contentDescription="@string/rome"/>

        <ImageView
            android:id="@+id/thailand"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/thailand"
            android:scaleType="centerCrop"
            android:onClick="openThailand"
            android:contentDescription="@string/thailand"/>

        <ImageView
            android:id="@+id/venice"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/venice"
            android:scaleType="centerCrop"
            android:onClick="openVenice"
            android:contentDescription="@string/venice"/>

</LinearLayout>
    </ScrollView>